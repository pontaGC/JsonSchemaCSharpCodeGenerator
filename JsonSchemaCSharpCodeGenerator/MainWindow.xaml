<Window x:Class="JsonSchemaCSharpCodeGenerator.MainWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonSchemaCSharpCodeGenerator"
        mc:Ignorable="d"
        Title="JsonSchema C# Code Generator"
        Height="600" Width="800"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Select Json schema file-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0">
            <Label Content="Json schema:" />
            <Border BorderBrush="Black" BorderThickness="1"
                    Margin="5">
                <TextBlock Text="{Binding JsonSchemaFilePath, Mode=OneWay}"
                       MinWidth="400"
                       Width="600"
                       TextWrapping="NoWrap"
                       TextAlignment="Left"
                       ToolTip="{Binding Path=Text, RelativeSource={RelativeSource Self}}" />
            </Border>            
            <Button Content="browse..."
                    Command="{Binding BrowserJsonSchemaFileDialogCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" />
        </StackPanel>

        <!--C# namespace-->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0">
            <Label Content="C# namespace:" VerticalAlignment="Center" />
            <Border BorderBrush="Black" BorderThickness="1"
                    Margin="5">
                <TextBox Text="{Binding CSharpNamespace}"
                       MinWidth="400"
                       Width="400"
                       TextWrapping="NoWrap"
                       TextAlignment="Left"
                       ToolTip="{Binding Path=Text, RelativeSource={RelativeSource Self}}" />
            </Border>
        </StackPanel>

        <!--Generate C# code button-->
        <Button Grid.Row="2"
                Content="Generate C# Code"
                Width="200" Height="30"
                Margin="10"
                Command="{Binding GenerateCSharpClassCommand, Mode=OneTime}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" />
        <!--Generated C# code-->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Content="Copy"
                    Height="30" Width="80"
                    VerticalAlignment="Top" HorizontalAlignment="Left"
                    Margin="10, 0, 0, 0"
                    Command="{Binding CopyCsharpCodeCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" />
            <Border Grid.Row="1"
                    Margin="10"
                    BorderBrush="DeepSkyBlue"
                    BorderThickness="2">
                <ScrollViewer>
                    <TextBlock FontSize="12"
                           FontFamily="Consolas"
                           TextAlignment="Left"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           Text="{Binding GenerateCSharpCode, Mode=OneWay}" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
